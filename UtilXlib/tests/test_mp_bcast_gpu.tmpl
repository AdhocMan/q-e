#if defined(__CUDA)
PROGRAM test_mp_bcast_{vname}_gpu
!
! Simple program to check the functionalities of test_mp_bcast_i1.
!
    USE cudafor
#if defined(__MPI)
    USE MPI
#endif
    USE mp, ONLY : mp_bcast
    USE mp_world, ONLY : mp_world_start, mp_world_end, mpime, &
                          root, nproc, world_comm
    USE tester
    IMPLICIT NONE
    !
    TYPE(tester_t) :: test
    INTEGER :: world_group = 0
    ! test variable
    {type}, DEVICE :: {vname}_d{size}
    {type} :: {vname}_h{size}
    
    !    
    CALL test%init()
    
#if defined(__MPI)    
    world_group = MPI_COMM_WORLD
#endif
    CALL mp_world_start(world_group)
    {vname}_h{size} = mpime
    {vname}_d{size} = {vname}_h{size}
    CALL mp_bcast({vname}_d, root, world_comm)
    {vname}_h{size} = {vname}_d{size}
    !
    CALL test%assert_equal({allf}({vname}_h .eq. 0) , .true. , fail=.true.)
    !
    {vname}_h{size} = mpime
    {vname}_d{size} = {vname}_h{size}
    CALL mp_bcast({vname}_d, nproc-1, world_comm)
    {vname}_h{size} = {vname}_d{size}
    !
    CALL test%assert_equal({allf}({vname}_h .eq. nproc-1) , .true. , fail=.true.)
    !
    CALL print_results(test)
    !
    CALL mp_world_end()
    !
END PROGRAM test_mp_bcast_{vname}_gpu
#else
PROGRAM test_mp_bcast_{vname}_gpu
    CALL no_test()
END PROGRAM test_mp_bcast_{vname}_gpu
#endif
